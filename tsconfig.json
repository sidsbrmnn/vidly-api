{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["esnext"],
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "types": ["node", "jest", "express"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["types/**/*.d.tsdist"],
    "include": ["types/**/*.d.ts", "**/*.ts"]
}
